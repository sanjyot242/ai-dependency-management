# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dependency-manager

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672

# Dependency Processing Limits
MAX_DEPENDENCY_DEPTH=50
MAX_DEPENDENCY_NODES=50000
MAX_PROCESSING_TIME_MS=900000
MAX_CIRCULAR_REFS=10000
MEMORY_WARNING_MB=2048
MEMORY_CRITICAL_MB=6144

# API Rate Limiting
NPM_REGISTRY_RATE_LIMIT=300
OSV_API_RATE_LIMIT=100
GITHUB_API_RATE_LIMIT=5000

# Batch Processing Configuration
DEFAULT_BATCH_SIZE=10
MAX_BATCH_SIZE=20
BATCH_DELAY_MS=100
MAX_BATCH_TIMEOUT_MS=120000

# Lock File Processing
MAX_LOCK_FILE_SIZE_MB=500
LOCK_FILE_TIMEOUT_MS=300000

# Vulnerability Scanning
ENABLE_VULNERABILITY_SCANNING=true
VULNERABILITY_BATCH_SIZE=1000
VULNERABILITY_TIMEOUT_MS=30000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
MEMORY_CHECK_INTERVAL=1000
PERFORMANCE_LOG_LEVEL=info

# Error Handling
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
ENABLE_FALLBACK_PROCESSING=true
FALLBACK_MAX_DEPTH=10

# Development/Debug
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_DEBUG_METRICS=true